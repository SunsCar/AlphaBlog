
  <% if @article.errors.any? %>
  <h3>Error!</h3>
  <% @article.errors.full_messages.each do |msg| %>
  <ul>
  <li><% msg %></li>
</ul>
<% end %>
<% end %>


<h1>Edit the Article</h1>

<%= form_for @article do |f| %>

<p>

<%= f.label :title %><br/>

<%= f.text_field :title %>

</p>

<p>

<%= f.label :description %><br/>

<%= f.text_area :description %>

</p>

<p>

<%= f.submit %>
<% end %>

</p>
<%= link_to 'index', articles_path %>

